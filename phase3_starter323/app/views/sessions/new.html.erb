<div class="container">
<%= form_for(:session, url: sessions_path) do |f| %>
    <h2>Login</h2>
    <br>
    <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <br>
    <div class="field">
        <%=f.label :password %>
        <%= f.password_field :password %>
    </div>
    <br>
    <div class="actions">
        <%= f.submit "Login" %>
    </div>
    
<% end %>
</div>